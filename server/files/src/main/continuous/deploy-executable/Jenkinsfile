
pipeline 
{
    agent
    {
        label 'master'
    }

    stages 
    {
        stage('Configure Engraver Camera') 
        {
            steps 
            {
                echo 'Configuring...'

                sh '''
                    pwd
                    ls -ltrh
                    cd neje-engrave/src/main/ansible
                    cp ${ansible_inventory_path} .
                    ls -ltrh
                    ansible-playbook camera.yml -i ansible-betoland.inventory -l camera-light-stick
                '''
            }
        }
    }
}